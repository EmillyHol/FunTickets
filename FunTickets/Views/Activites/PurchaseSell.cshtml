@model FunTickets.Models.Activite

@{
    ViewData["Title"] = "Details";
}

<h5>All Purchases</h5>

@if (@Model.Purchase != null && @Model.Purchase.Any())
    {
<table class="table table-striped">
    <thead>
        <tr>
            <th>Purchase ID</th>
            <th>Event</th>
            <th>Tickets</th>
            <th>Email</th>
            <th>Card Expiry</th>
            <th>Card CVC</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model.Purchase)
        {
            <tr>
                <td>@item.PurchaseId</td>

                <td>
                    @item.Activite?.ActiviteName
                </td>

                <td>@item.TicketQuantity</td>
                <td>@item.CustomerEmail</td>
                <td>@item.CardExpiry</td>
                <td>@item.CardCVC</td>
            </tr>
        }
    </tbody>
</table>
}

    else
    {
        <p>No purchases found for this activity.</p>
    }

    <div class="mt-3">
        <a asp-action="Details" asp-route-id="@Model.ActiviteId" class="btn btn-secondary">Back to Details</a>
    </div>
