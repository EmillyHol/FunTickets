

@model IEnumerable<FunTickets.Models.Activite>

@{
    ViewData["Title"] = "Home Page";
}
@* HOme index index *@
<!-- Banner Section -->
<div class="banner d-flex align-items-center justify-content-center text-center mb-3">
    <div class="bg-white bg-opacity-75 p-5 rounded shadow text-dark">
        <h1 class="display-4 fw-bold mb-4">Welcome to Wonderlandx</h1>
        <div class="d-flex justify-content-center">
            <a href="@Url.Action("Create", "Activites")"class="btn btn-primary px-5 py-2 rounded-3 fw-bold">Create
            </a>
        </div>
    </div>
</div>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ActiviteName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActivityDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Owner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ActiviteName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                    @item.ActivityDateTime.ToString("g")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Owner)
            </td>
            <td>
                @item.CreatedAt.ToString("MMM dd, yyyy")
            </td>
            <td>
                <a asp-controller="Activites" asp-action="Edit" asp-route-id="@item.ActiviteId">Edit</a> |
                <a asp-controller="Activites"  asp-action="Details" asp-route-id="@item.ActiviteId">Details</a> |
                <a asp-controller="Activites" asp-action="Delete" asp-route-id="@item.ActiviteId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
